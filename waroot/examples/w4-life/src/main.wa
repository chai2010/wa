import "syscall/wasm4"

#wa:export start
func Start {
	println("life start")
	LifeInit()
}

#wa:export update
func Update {
	gamepad := wasm4.GetGamePad1()
	if gamepad&wasm4.BUTTON_1 != 0 {
		LifeStop()
	}
	if gamepad&wasm4.BUTTON_2 != 0 {
		LifeStart()
	}

	LifeStep()
}
